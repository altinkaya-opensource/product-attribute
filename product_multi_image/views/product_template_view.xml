<odoo>


    <record id="view_product_template_form_img_inh" model="ir.ui.view">
        <field name="name">Add multi images</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Web Resimleri" name="multi_image">
                    <field name="image_ids"
                           nolabel="1"
                           context="{
                               'default_owner_model': 'product.template',
                               'default_owner_id': id,
                               'form_view_ref': 'product_multi_image.image_form_view',
                               'kanban_view_ref': 'product_multi_image.image_kanban_view',
                           }"
                           mode="tree"
                    >
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="image_main" widget="image" options="{'size': [100, 100]}"/>
                            <field name="name"/>
                            <field name="is_published"/>
                            <field name="product_variant_ids" widget="many2many_tags"/>
                            <field name="owner_model" invisible="1"/>
                            <field name="owner_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
